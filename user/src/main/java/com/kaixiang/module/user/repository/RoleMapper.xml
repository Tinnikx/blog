<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kaixiang.module.user.repository.RoleMapper">
    <select id="find" resultType="com.kaixiang.module.user.entity.Role">
        SELECT * FROM role where id = #{id}
    </select>

    <select id="findByName" resultType="com.kaixiang.module.user.entity.Role">
        SELECT * FROM role where name = #{name}
    </select>

    <select id="findById" resultType="com.kaixiang.module.user.entity.Role">
        SELECT * FROM role where id = #{id}
    </select>

    <delete id="deleteByUserUuid">
        delete from role where user_uuid = #{userUuid}
    </delete>
</mapper>